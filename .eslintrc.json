{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-underscore-dangle": "off",
    "no-param-reassign": "off",
    "arrow-body-style": "off"
  },
  "ignorePatterns": [
    "**/dist/**"
  ]
}
